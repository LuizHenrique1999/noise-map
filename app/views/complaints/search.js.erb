if(<%= @isComplaint %>){
  marker.setLatLng(<%= @coordinates %>)

  if(!map.hasLayer(marker)){
    marker.addTo(map)
  }

  map.flyTo(marker.getLatLng(), 18)
  marker.openPopup()
  
  latitude_field.value = <%= @coordinates[0] %>
  longitude_field.value = <%= @coordinates[1] %>
}
else {
  map.flyTo(<%= @coordinates%>, 18)
}